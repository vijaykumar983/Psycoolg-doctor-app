<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.psycoolgdoctor">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <!-- SplashActivity -->
        <activity
            android:name=".ui.components.activities.SplashActivity"
            android:theme="@style/AppThemeStatusBarSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--IntroActivity-->
        <activity
            android:name=".ui.components.activities.intro.IntroActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeStatusBarIntro"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

        <!--TermConditionActivity-->
        <activity
            android:name=".ui.components.activities.termCondition.TermConditioinActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeStatusBarPrimaryColor"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

        <!-- LoginActivity -->
        <activity
            android:name=".ui.components.activities.login.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeStatusBarPrimaryColor"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <!-- HomeActivity -->
        <activity
            android:name=".ui.components.activities.home.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeStatusBarPrimaryColor"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <!--WriteBlogActivity-->
        <activity
            android:name=".ui.components.activities.writeBlog.WriteBlogActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeStatusBarPrimaryColor"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <!--WriteQuoteActivity-->
        <activity
            android:name=".ui.components.activities.writeQuote.WriteQuoteActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeStatusBarPrimaryColor"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <!--CreateTicketActivity-->
        <activity
            android:name=".ui.components.activities.createTicket.CreateTicketActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeStatusBarPrimaryColor"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

        <!--OverviewActivity-->
        <activity
            android:name=".ui.components.activities.overview.OverviewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeStatusBarPrimaryColor"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

        <!--AgreementActivity-->
        <activity
            android:name=".ui.components.activities.agreement.AgreementActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeStatusBarPrimaryColor"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />


    </application>

</manifest>